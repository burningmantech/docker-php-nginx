#!/bin/sh

# Run sh within a new container

set -eu

wd="$(cd "$(dirname "$0")/.." && pwd)";

image_repo="php-nginx";
 image_tag="$(cat "${wd}/Dockerfile" | grep -e '^FROM ' | sed -e 's|^FROM php:||' -e 's|-fpm||')";
image_name="${image_repo}:${image_tag}";

docker run --rm --name php-nginx --publish 8000:80 "${image_name}";
