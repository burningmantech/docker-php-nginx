#!/bin/sh

#
# Build the Docker container
#

. "$(dirname "$0")/.common.sh";

exec docker run                                             \
    --rm                                                    \
    --name="${container_name}"                              \
    --publish=8000:80                                       \
    --volume="${wd}/test/static:/var/www/html"              \
    --volume="${wd}/test/application:/var/www/application"  \
    "${image_name}"                                         \
    ;
